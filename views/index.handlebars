<div class="pic"><img class="image" src="..\assets\img\burger.png" alt="Burger Picture"></div>
<h1 class="webTitle">Eat-Da-Burger!</h1>

<div class="row">
    <div class="col-6 text-center">
        <h2>Delicious burgers, ready to eat!</h2>
            <ol>
                {{#each burgers}}
                    {{#unless devoured}}
                    <li>
                        <p>{{burger_name}}</p>
                        <button class="eat" data-id="{{id}}">Devour!</button>
                        <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
                    </li>
                    {{/unless}}
                {{/each}}
            </ol>
    </div>
    <div class="col-6 text-center">
        <h2>Burgers that have been devoured</h2>
            <ol>
                {{#each burgers}}
                    {{#if devoured}}
                    <li>
                        <p>{{burger_name}}</p>
                        <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
                    </li>
                    {{/if}}
                {{/each}}
            </ol>
    </div>
</div>

<div class="submitBox">
<h2>Enter a burger you want to eat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger type:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Submit</button>
</form>
</div>